
<% @categories.each do |category| %>
<li><%= link_to category.title, category_path(category) %></li>
<% end %>

<h1><%= @category.title %></h1>
<% @category.items.each do |item| %>
  <h3><%= link_to item.title, item_path(item) %></h3>
  <p>$<%= item.price.to_f/100 %></p>
  <% if current_user %>
    <%= button_to 'Add to Cart', line_items_path(item_id: item) %></li>
  <% end %>
<% end %>
